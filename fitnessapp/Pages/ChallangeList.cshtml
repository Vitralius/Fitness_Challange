@page
@model fitnessapp.Namespace.ChallangeListModel
@{
    ViewData["Title"] = "Challange List";
}

<h1>Challange List</h1>

<form method="post">
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="NewChallangeList.Title" class="control-label"></label>
    <input asp-for="NewChallangeList.Title" class="form-control" />
    <span asp-validation-for="NewChallangeList.Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NewChallangeList.Description" class="control-label"></label>
    <input asp-for="NewChallangeList.Description" class="form-control" />
    <span asp-validation-for="NewChallangeList.Description" class="text-danger"></span>
    </div>
<div class="form-group">
    <label asp-for="NewChallangeList.EndDate" class="control-label"></label>
<input class="form-control" asp-for="NewChallangeList.EndDate" />
</div>
 <div class="form-group">
    <label asp-for="NewChallangeList.Category" class="control-label"></label>
    <select asp-for="NewChallangeList.Category" class="form-control" id="PizzaSize">
        <option value="">-- Select Category --</option>
        <option value="High">High priority</option>
        <option value="Medium">Medium priority</option>
        <option value="Low">Low priority</option>
    </select>
    <span asp-validation-for="NewChallangeList.Category" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Create" class="btn btn-primary" />
</div>
</form>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}


<table class="table mt-5">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Category</th>
            <th scope="col">End date</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var challangelist in Model.cList)
    {
        <tr>
            <td>@challangelist.Title</td>
            <td>@challangelist.Description</td>
            <td>@challangelist.Category</td>
            <td>@challangelist.EndDate</td>
            <td>@challangelist.IsDeleted</td>
            <td>
                <form method="post" asp-page-handler="Delete" asp-route-id="@challangelist.Id">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

